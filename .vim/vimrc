runtime bundle/vim-pathogen/autoload/pathogen.vim
call pathogen#infect()


"Colors and syntax
set t_Co=256
syntax enable
colorscheme Monokai
set number

"Tabs
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab

set mouse=a
filetype indent plugin on
set visualbell
set ruler
set autoindent
set nowrap
execute "set colorcolumn=" . join(range(90,335),',')
