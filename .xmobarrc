Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
        , borderColor = "#333232"
        , border = TopB
        , bgColor = "#333232"
        , fgColor = "white"
        , position = TopW L 100
        , commands = [
                 Run Battery [
                      "-t", "<acstatus>: <left>%",
                      "--",
                      "-O", "AC",
                      "-o", "Bat",
                      "-h", "green",
                      "-l", "red"
                    ] 10
            , Run Cpu ["-L","3","-H","50","--normal","#40e2b4","--high","#ec4e3a"] 10
            , Run Memory ["-t","Mem: <usedratio>%"] 10
            , Run Date "%a %b %_d %Y" "date" 10
            , Run Date "%I:%M:%S" "time" 10
            , Run StdinReader
            ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% }<fc=#ea863b>%time%</fc>{ %battery% | %cpu% | %memory% | <fc=#a541e0>%date%</fc> "
        }
