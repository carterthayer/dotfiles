[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color8}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}
red = ${xrdb:color1}
orange = ${xrdb:color9}
green = ${xrdb:color10}
yellow = ${xrdb:color11}
blue = ${xrdb:color12}
purple = ${xrdb:color13}
cyan = ${xrdb:color14}
primary = ${colors.green}
secondary = ${xrdb:color4}
alert = ${xrdb:color1}

[bar/laptop]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 20
offset-x = 0
offset-y = 0
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.primary}

border-bottom-size = 1
border-color = ${colors.background-alt}

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 2

font-0 = Inconsolata:size=10;3
font-1 = FontAwesome:size=10;3

modules-left = bspwm xwindow
modules-center =
modules-right = wired-network wireless-network pulseaudio cpu memory battery cal powermenu

wm-restack = bspwm
override-redirect = false

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = default
cursor-scroll = ns-resize

[bar/four]
monitor = ${env:MONITOR:DP-1-1}
width = 100%
height = 20
offset-x = 0
offset-y = 0
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.primary}

border-bottom-size = 1
border-color = ${colors.background-alt}

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 2

font-0 = Inconsolata:size=10;3
font-1 = FontAwesome:size=10;3

modules-left = bspwm
modules-center = xwindow
modules-right = wired-network wireless-network pulseaudio cpu memory battery cal powermenu

wm-restack = bspwm
override-redirect = false

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = default
cursor-scroll = ns-resize

[module/cal]
type = custom/script
; there's a clock icon in that echo
exec = echo  `date +"%a %b %d, %Y %H:%M:%S" | sed 's/  / /'`
interval = 1
format-foreground = ${colors.foreground}
;click-left = gsimplecal
format-underline = ${colors.blue}

[module/xwindow]
type = internal/xwindow
label = %title:0:80:…%
label-foreground = ${colors.foreground}
label-font = 0
label-maxlen = 80


[module/bspwm]
type = internal/bspwm

;format = <label-monitor><label-state>

label-focused = %name%
label-focused-foreground = ${colors.primary}
label-focused-underline= ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1
label-urgent-overline = ${colors.alert}
label-urgent-underline = ${colors.alert}

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1
label-font = 0

pin-workspaces = false


[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-close = 
label-separator = |

menu-0-0 = 
menu-0-0-exec = shutdown now
menu-0-1 = 
menu-0-1-exec = shutdown -r now


[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5
format-charging
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
;format-full = <ramp-capacity> <label-full>

format-charging-underline = ${colors.red}
format-discharging-underline = ${colors.red}

ramp-capacity-0 =
ramp-capacity-1 =
ramp-capacity-2 =
ramp-capacity-3 =
ramp-capacity-4 =

[module/cpu]
type = internal/cpu
format = <label>
label = %percentage%%
format-underline = ${colors.purple}

[module/memory]
type = internal/memory
interval = 3
label = %percentage_used%%
format-underline = ${colors.green}

[module/wired-network]
type = internal/network
interface = eno1
format-connected = <label-connected>
label-connected =  %ifname%
format-connected-underline = ${colors.cyan}

[module/wireless-network]
type = internal/network
interface = wlp2s0
format-connected = <label-connected>
label-connected =  %essid%
format-connected-underline = ${colors.cyan}

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false

format-volume = <ramp-volume> <label-volume>
format-volume-underline = ${colors.yellow}

label-muted = muted
label-muted-foreground = ${colors.background-alt}
format-muted-underline = ${colors.yellow}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 =

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0
